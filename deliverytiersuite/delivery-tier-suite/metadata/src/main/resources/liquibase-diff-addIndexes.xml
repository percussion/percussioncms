    <changeSet  author="Santosh"  id="updateDataTypes-PSMetadata-21021">
        <dropAllForeignKeyConstraints baseTableName="PERC_PAGE_METADATA" />

        <dropPrimaryKey tableName="PERC_PAGE_METADATA"/>

        <dropIndex indexName="typeIndex"
