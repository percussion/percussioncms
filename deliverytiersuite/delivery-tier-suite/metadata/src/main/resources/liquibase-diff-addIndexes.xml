                            newDataType="NVARCHAR(255)"
                            tableName="PERC_PAGE_METADATA"/>
        <modifyDataType     columnName="pagepath"
                            newDataType="NVARCHAR(2000)"
                            tableName="PERC_PAGE_METADATA"/>
