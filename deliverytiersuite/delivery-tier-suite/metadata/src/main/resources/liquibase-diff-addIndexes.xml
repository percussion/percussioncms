    <changeSet author="natechadwick" id="dropOrphans-PSMetadataProperties-21021">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="PERC_PAGE_METADATA_PROPERTIES"/>
            <and>
                <tableExists tableName="PERC_PAGE_METADATA"/>
            </and>
        </preConditions>
        <sql>
            DELETE FROM PERC_PAGE_METADATA_PROPERTIES WHERE ENTRY_ID NOT IN (SELECT PAGEPATHHASH FROM PERC_PAGE_METADATA)
        </sql>
        <comment>Remove orphaned entries before applying foreign key.</comment>
    </changeSet>
