                <tableExists tableName="PERC_PAGE_METADATA_PROPERTIES"/>
            </and>
            <and>
                <not>
                    <foreignKeyConstraintExists
                            foreignKeyName="FK_PERC_PAGE_METADATA_PROPERTIES_PAGEPATHHASH"/>
                </not>
            </and>
        </preConditions>
        <addForeignKeyConstraint  baseColumnNames="ENTRY_ID"
                                  baseTableName="PERC_PAGE_METADATA_PROPERTIES"
                                  constraintName="FK_PERC_PAGE_METADATA_PROPERTIES_PAGEPATHHASH"
                                  onDelete="CASCADE"
                                  onUpdate="RESTRICT"
                                  referencedColumnNames="PAGEPATHHASH"
                                  referencedTableName="PERC_PAGE_METADATA"
                                  validate="true"/>
    </changeSet>
