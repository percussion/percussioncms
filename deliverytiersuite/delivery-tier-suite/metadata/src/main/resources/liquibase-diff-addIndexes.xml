                            newDataType="NVARCHAR(255)"
                            tableName="PERC_PAGE_METADATA"/>
        <modifyDataType     columnName="type"
                            newDataType="NVARCHAR(255)"
                            tableName="PERC_PAGE_METADATA"/>
        <addNotNullConstraint columnName="pagepathHash"
                              columnDataType="NVARCHAR(40)"
                               constraintName="pagepathHash_notnull"
                               tableName="PERC_PAGE_METADATA"
                               validate="true"/>
        <addPrimaryKey      columnNames="pagepathHash"
                            tableName="PERC_PAGE_METADATA"
                            validate="true"/>
        <createIndex  clustered="false"
                      indexName="typeIndex"
                      tableName="PERC_PAGE_METADATA"
                      unique="false">
            <column  name="type"/>
        </createIndex>
        <sql dbms="mysql">
          ALTER TABLE PERC_PAGE_METADATA CONVERT TO CHARACTER SET utf8 COLLATE utf8_general_ci;
        </sql>
    </changeSet>
