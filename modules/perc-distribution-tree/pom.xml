    <parent>
        <artifactId>core</artifactId>
        <groupId>com.percussion</groupId>
        <version>8.0.2.5</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>perc-distribution-tree</artifactId>

    <properties>
        <assembly-directory>${project.build.outputDirectory}/distribution</assembly-directory>
        <jetty-directory>${basedir}/target/jetty</jetty-directory>
        <ant-installer>${assembly-directory}/rxconfig/Installer</ant-installer>
        <rxapps-directory>${basedir}/target/rxapps</rxapps-directory>
        <rxapps.source>${rxapps-directory}/perc-rxapps-${project.version}</rxapps.source>
        <packages-directory>${basedir}/target/packages</packages-directory>
        <derby-home>${basedir}/target/derby-home</derby-home>
        <db.user>CMDB</db.user>
        <db.pass.enc>7cf3be70d83a6948</db.pass.enc>
        <db.schema>CMDB</db.schema>
        <db.name />
        <db.driver>derby</db.driver>
        <db.class>org.apache.derby.jdbc.EmbeddedDriver</db.class>
        <db.backend>DERBY</db.backend>
        <db.server>CMDB;create=true</db.server>
        <ds.name>PercussionData</ds.name>
        <ant.contrib.resource>${basedir}/../../system/Tools/Ant/lib/ant-contrib-0.6.jar</ant.contrib.resource>
        <exts.store>${assembly-directory}/Extensions</exts.store>
        <REFRESH_PROP_NAME>REFRESH</REFRESH_PROP_NAME>
        <extensions-directory>${basedir}/target/extensions</extensions-directory>
    </properties>
    <build>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

    <plugins>
        <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>properties-maven-plugin</artifactId>
            <version>1.0.0</version>
            <executions>
                <execution>
                    <goals>
                        <goal>set-system-properties</goal>
                    </goals>
                    <configuration>
                        <properties>
                            <property>
                                <name>derby.system.home</name>
                                <value>${derby-home}</value>
                            </property>
                            <property>
                                <name>deployerdir</name>
                                <value>${assembly-directory}</value>
                            </property>
                        </properties>
                    </configuration>
                </execution>
            </executions>
        </plugin>
        <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
                <!--
                The jetty-home artifact is the starting point for the jetty-distribution
                and must happen early in the build process
                -->
                <execution>
                    <id>copy</id>
                    <phase>generate-resources</phase>
                    <goals>
                        <goal>copy</goal>
                    </goals>
                    <configuration>
                        <artifactItems>
                            <artifactItem>
                                <groupId>com.percussion</groupId>
                                <artifactId>perc-service-wrapper</artifactId>
                                <version>${project.version}</version>
                                <type>jar</type>
                                <overWrite>true</overWrite>
                                <outputDirectory>${assembly-directory}</outputDirectory>
                                <destFileName>perc-service-wrapper.jar</destFileName>
                            </artifactItem>
                            <artifactItem>
                                <groupId>com.percussion</groupId>
                                <artifactId>perc-ant</artifactId>
                                <version>${project.version}</version>
                                <type>jar</type>
                                <overWrite>true</overWrite>
                                <outputDirectory>${ant-installer}</outputDirectory>
                            </artifactItem>

                        </artifactItems>
                        <outputDirectory>${project.build.directory}/wars</outputDirectory>
                        <overWriteReleases>false</overWriteReleases>
                        <overWriteSnapshots>true</overWriteSnapshots>
                    </configuration>
                </execution>
                <execution>
                    <id>unpack-jetty-distribution</id>
                    <phase>generate-resources</phase>
                    <goals>
                        <goal>unpack</goal>
                    </goals>
                    <configuration>
                        <artifactItems>
                            <artifactItem>
                                <groupId>com.percussion</groupId>
                                <artifactId>perc-jetty</artifactId>
                                <version>${project.version}</version>
                                <type>zip</type>
                                <outputDirectory>${jetty-directory}</outputDirectory>
                            </artifactItem>

                            <artifactItem>
                                <groupId>com.percussion</groupId>
                                <artifactId>perc-rxapps</artifactId>
                                <version>${project.version}</version>
                                <type>zip</type>
                                <outputDirectory>${rxapps-directory}</outputDirectory>
                            </artifactItem>
                            <artifactItem>
                                <groupId>com.percussion</groupId>
                                <artifactId>perc-packages</artifactId>
                                <version>${project.version}</version>
                                <type>zip</type>
                                <outputDirectory>${packages-directory}</outputDirectory>
                            </artifactItem>
                            <artifactItem>
                                <groupId>com.percussion</groupId>
                                <artifactId>extensions-main</artifactId>
                                <version>${project.version}</version>
                                <type>jar</type>
                                <overWrite>true</overWrite>
                                <outputDirectory>${extensions-directory}/Exits</outputDirectory>
                            </artifactItem>
                            <artifactItem>
                                <groupId>com.percussion</groupId>
                                <artifactId>extensions-nav</artifactId>
                                <version>${project.version}</version>
                                <type>jar</type>
                                <overWrite>true</overWrite>
                                <outputDirectory>${extensions-directory}/ManagedNavExits</outputDirectory>
                            </artifactItem>

                            <artifactItem>
                                <groupId>com.percussion</groupId>
                                <artifactId>extensions-sfp</artifactId>
                                <version>${project.version}</version>
                                <type>jar</type>
                                <overWrite>true</overWrite>
                                <outputDirectory>${extensions-directory}/SiteFolderPublishingExits</outputDirectory>
                            </artifactItem>

                            <artifactItem>
                                <groupId>com.percussion</groupId>
                                <artifactId>extensions-workflow</artifactId>
                                <version>${project.version}</version>
                                <type>jar</type>
                                <overWrite>true</overWrite>
                                <outputDirectory>${extensions-directory}/WorkflowExits</outputDirectory>
                            </artifactItem>
                        </artifactItems>
                        <excludes>META-INF/**</excludes>

                    </configuration>
                </execution>

            </executions>
        </plugin>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
                <execution>
                    <id>default-cli</id>
                    <phase>process-resources</phase>
                    <goals>
                        <goal>run</goal>
                    </goals>
                    <configuration>

                        <target>
                            <property name="sfp.exits.source" location="${rxapps.source}/RxFastForward/SiteFolderPublishing/Exits" />
                            <property name="nav.exits.source" location="${rxapps.source}/RxFastForward/ManagedNav/Exits" />
                            <property name="default_template.exits.source" location="${rxapps.source}/RxFastForward/DefaultTemplate/Exits" />

                            <property name="install.src" location="${assembly-directory}" />
                            <property name="install.dir" value="${basedir}/target/classes/distribution" />
                            <property name="install.type" value="new" />
                            <property name="clean.install" value="true" />
                            <property name="do.install" value="true" />

                            <ant antfile="${basedir}/src/main/resources/installDistributionFiles.xml" inheritAll="true" inheritRefs="true" />

                     <!--       <ant antfile="${basedir}/src/main/resources/distribution/rxconfig/Installer/install.xml" target="install" inheritAll="true" inheritRefs="true">
                                <property name="basedir" location="${basedir}/src/main/resources/distribution/rxconfig/Installer"/>
                            </ant>
                     -->
                        </target>
                    </configuration>
                </execution>

            </executions>
            <dependencies>
                <dependency>
                    <groupId>com.percussion</groupId>
                    <artifactId>perc-ant</artifactId>
                    <version>${project.version}</version>
                </dependency>
                <dependency>
                    <groupId>javax.servlet</groupId>
                    <artifactId>javax.servlet-api</artifactId>
                    <version>${servlet.spec}</version>
                </dependency>
                <dependency>
                    <groupId>org.apache.derby</groupId>
                    <artifactId>derby</artifactId>
                    <version>${derby.version}</version>
                </dependency>
                <dependency>
					<groupId>installanywhere</groupId>
					<artifactId>iaant</artifactId>
					<version>0.0.1</version>
				</dependency>
				<dependency>
					<groupId>installanywhere</groupId>
					<artifactId>services</artifactId>
					<version>0.0.1</version>
				</dependency>
	 <dependency>
					<groupId>ant-contrib</groupId>
					<artifactId>ant-contrib</artifactId>
					<version>1.0b3</version>
					<exclusions>
						<exclusion>
							<artifactId>ant</artifactId>
							<groupId>ant</groupId>
						</exclusion>
					</exclusions>
				</dependency>
				<dependency>
					<groupId>flexera.ia</groupId>
					<artifactId>IAClasses</artifactId>
					<version>2020.0.0.0</version>
				</dependency>

            </dependencies>
        </plugin>
       <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
            <execution>
                <id>create-my-bundle</id>
                <phase>package</phase>
                <goals>
                    <goal>single</goal>
                </goals>
                <configuration>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <finalName>perc-distribution-tree</finalName>
                    <appendAssemblyId>false</appendAssemblyId>
                     <archive>
                        <manifest>
                            <mainClass>com.percussion.preinstall.Main</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </execution>
        </executions>
       </plugin>
        <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
        <!--
        Setup the jetty distribution as a jetty.home/jetty.base combo using start.ini configuration mechanism
        -->
        <execution>
            <id>setup-home</id>
            <phase>process-classes</phase>
            <configuration>
                <mainClass>org.eclipse.jetty.start.Main</mainClass>
                <arguments>
                    <argument>jetty.home=${assembly-directory}/jetty/upstream</argument>
                    <argument>jetty.base=${assembly-directory}/jetty/base</argument>
                    <argument>--include-jetty-dir=${assembly-directory}/jetty/defaults</argument>
                    <argument>--create-startd</argument>
                    <argument>--create-files</argument>
                    <argument>--add-to-start=perc</argument>
                </arguments>

            </configuration>
            <goals>
                <goal>java</goal>
            </goals>
        </execution>
        </executions>

        </plugin>
    </plugins>


    </build>



