                <loadfile property="setting.test" srcFile="@{srcFile}">
                    <filterchain>
                        <linecontains>
                            <contains value="@{value}"/>
                        </linecontains>
                    </filterchain>
                </loadfile>

                <if>
                    <not>
                        <equals arg1="${setting.test}" arg2="@{value}" trim="true" forcestring="true" />
                    </not>
                    <then>
                        <echo file="@{srcFile}" append="true" message="&#010;@{value}" />
                    </then>
                </if>
            </sequential>
