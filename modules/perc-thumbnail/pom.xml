        </repository>
    </repositories>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>process-resources</phase>
                        <id>import-installs</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <mkdir dir="${download-folder}" />
                                <echo message="download windows archive" />
                                <get src="${windows.url}" dest="${download-folder}" />
                                <echo message="download linux archive" />
                                <get src="${linux.url}" dest="${download-folder}" />
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
               <executions>
                   <execution>
                       <id>default-deploy</id>
                       <phase>none</phase>
                   </execution>
               </executions>
            </plugin>
        </plugins>
    </build>

