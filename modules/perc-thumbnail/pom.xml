        </windows.url>
        <linux.url>https://bitbucket.org/ariya/phantomjs/downloads/phantomjs-${phantomjs.version}-linux-x86_64.tar.bz2
        </linux.url>
        <download-folder>${project.basedir}/target/phantomjs-download</download-folder>
    </properties>

    <profiles>
<profile>
    <id>populate-nexus</id>
    <repositories>
        <repository>
            <id>perc-java-repo</id>
            <url>https://mvn.percussion.com/releases/</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>perc-snapshots-repo</id>
            <url>https://mvn.percussion.com/snapshots/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>

        <repository>
            <id>perc-thirdparty</id>
            <name>thirdparty</name>
            <url>https://mvn.percussion.com/repositories/thirdparty/</url>
        </repository>
        <repository>
            <id>maven-central</id>
            <url>https://repo1.maven.org/maven2</url>
        </repository>
    </repositories>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>process-resources</phase>
                        <id>import-installs</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <mkdir dir="${download-folder}" />
                                <echo message="download windows archive" />
                                <get src="${windows.url}" dest="${download-folder}" />
                                <echo message="download linux archive" />
                                <get src="${linux.url}" dest="${download-folder}" />
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
               <executions>
                   <execution>
                       <id>default-deploy</id>
                       <phase>none</phase>
                   </execution>
                   <execution>
                       <id>phantomjs-nexus-deploy-win</id>
                       <phase>deploy</phase>
                       <goals>
                           <goal>deploy-file</goal>
                       </goals>
                       <configuration>
                           <repositoryId>repo-man</repositoryId>
                           <file>${download-folder}/phantomjs-${phantomjs.version}-windows.zip</file>
                           <url>https://mvn.percussion.com/repositories/thirdparty/</url>
                           <groupId>phantomjs</groupId>
                           <artifactId>phantomjs-win</artifactId>
                           <version>2.1.1</version>
                           <packaging>zip</packaging>
                           <generatePom>true</generatePom>
                       </configuration>
                   </execution>
                   <execution>
                       <id>phantomjs-nexus-deploy-linux</id>
                       <phase>deploy</phase>
                       <goals>
                           <goal>deploy-file</goal>
                       </goals>
                       <configuration>
                           <repositoryId>repo-man</repositoryId>
                           <file>${download-folder}/phantomjs-${phantomjs.version}-linux-x86_64.tar.bz2</file>
                           <url>https://mvn.percussion.com/repositories/thirdparty/</url>
                           <groupId>phantomjs</groupId>
                           <artifactId>phantomjs-linux</artifactId>
                           <version>2.1.1</version>
                           <packaging>tar.bz2</packaging>
                           <generatePom>true</generatePom>
                       </configuration>
                   </execution>
                   <execution>
                       <id>phantomjs-nexus-deploy-macosx</id>
                       <phase>deploy</phase>
                       <goals>
                           <goal>deploy-file</goal>
                       </goals>
                       <configuration>
                           <repositoryId>repo-man</repositoryId>
                           <file>${download-folder}/phantomjs-${phantomjs.version}-macosx.zip</file>
                           <url>https://mvn.percussion.com/repositories/thirdparty/</url>
                           <groupId>phantomjs</groupId>
                           <artifactId>phantomjs-macosx</artifactId>
                           <version>2.1.1</version>
                           <packaging>zip</packaging>
                           <generatePom>true</generatePom>
                       </configuration>
                   </execution>
               </executions>
            </plugin>
        </plugins>
    </build>

</profile>
    </profiles>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.1.1</version>
                <executions>
                    <execution>
                        <id>copy-phantomjs-archive</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>
                                ${project.build.outputDirectory}/phantomjs-inst
                            </outputDirectory>
                            <includeArtifactIds>phantomjs-linux,phantomjs-win,phantomjs-macosx</includeArtifactIds>
                            <stripVersion>true</stripVersion>

                        </configuration>
                    </execution>

                </executions>
            </plugin>

        </plugins>
    </build>
