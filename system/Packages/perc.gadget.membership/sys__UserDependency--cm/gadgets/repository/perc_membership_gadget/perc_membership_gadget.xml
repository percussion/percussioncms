            if(rows === NaN)
               rows = 5;

            miniMsg    = new gadgets.MiniMessage(__MODULE_ID__);
            loadingMsg = miniMsg.createStaticMessage("Loading...");            
            
            $(".perc-membership-gadget").PercMembershipGadget(site,rows);
        })
        
