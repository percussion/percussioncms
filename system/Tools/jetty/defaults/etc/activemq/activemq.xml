<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
  http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd">

 <!--
        The <broker> element is used to configure the ActiveMQ broker.
    -->
    <broker useJmx="false" persistent="true" deleteAllMessagesOnStartup="true" xmlns="http://activemq.apache.org/schema/core" brokerName="localhost" dataDirectory="data/activemq-data">
        <destinationPolicy>
            <policyMap>
              <policyEntries>
                <policyEntry topic=">" producerFlowControl="true">
                </policyEntry>
                <policyEntry queue=">" prioritizedMessages="true" useCache="false" expireMessagesPeriod="0" queuePrefetch="1" producerFlowControl="true" memoryLimit="300 mb">
                    <pendingQueuePolicy>
                        <storeCursor/>
                    </pendingQueuePolicy>
                </policyEntry>
              </policyEntries>
            </policyMap>
        </destinationPolicy>

        <managementContext>
            <managementContext createConnector="false"/>
        </managementContext>


        <persistenceAdapter>
            <kahaDB directory="data/activemq-data/kahadb"/>
        </persistenceAdapter>


        <systemUsage>
          <systemUsage sendFailIfNoSpaceAfterTimeout="10000">
              <memoryUsage>
                  <memoryUsage limit="300 mb"/>
              </memoryUsage>
              <storeUsage >
                  <storeUsage limit="2048 mb"/>
              </storeUsage>
              <tempUsage>
                  <tempUsage limit="2048 mb"/>
              </tempUsage>
          </systemUsage>
      </systemUsage>
    </broker>
</beans>
